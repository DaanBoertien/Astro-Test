---
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import { loadSite } from '../lib/content';
import '../styles/global.css';

interface Props {
  title: string;
  description?: string;
  locale?: string;
}

const site = loadSite();
const { title, description = `${site.siteTitle} â€” Concert Pianist`, locale = site.defaultLocale } = Astro.props;
---

<!doctype html>
<html lang={locale}>
  <head>
    <meta charset="utf-8" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <meta name="description" content={description} />
    <meta name="generator" content={Astro.generator} />
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link href="https://fonts.googleapis.com/css2?family=Playfair+Display:wght@400;700&family=Lora:wght@400;500;700&display=swap" rel="stylesheet" />
    <title>{title}</title>
    <link rel="stylesheet" href="/cms/editor.css?v=3" />
  </head>
  <body>
    <Header locale={locale} />
    <main>
      <slot />
    </main>
    <Footer />
    <script is:inline src="/cms/editor.js?v=3"></script>
  </body>
</html>
